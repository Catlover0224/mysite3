<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="guestbook">

	<!-- 방명록 리스트 가져오기 -->
	<select id="selectList" resultType="com.javaex.vo.GuestbookVo">
		<![CDATA[
			select no, name, password, content, reg_date regDate
			from guestbook
			order by no desc
		]]>
	</select>




	<!-- 방명록 글 저장 -->
	<insert id="insert" parameterType="com.javaex.vo.GuestbookVo">
		<![CDATA[
			insert into guestbook 
			values (seq_guestbook_no.nextval,
					#{name},
					#{password},
					#{content},
					sysdate)
		]]>
	</insert>


	<!-- 방명록 글 삭제 -->
	<delete id="delete" parameterType="com.javaex.vo.GuestbookVo">
		<![CDATA[
			delete from guestbook 
			where no= #{no} 
			and password= #{password}
		]]>
	</delete>
	
	
	
	
	<!-- 방명록 글 저장(키값 저장) ajax-->
	<insert id="insertGuestbookKey" parameterType="com.javaex.vo.GuestbookVo">
		<selectKey keyProperty="no" resultType="int" order="BEFORE">
			<![CDATA[
				select seq_guestbook_no.nextval from dual
			]]>
		</selectKey>
		<![CDATA[
			insert into guestbook 
			values (#{no},
					#{name},
					#{password},
					#{content},
					sysdate)
		]]>
		
	</insert>
	
	
	<!-- 방명록 글 1개 가져오기 ajax -->
	<select id="selelctGuestbook" parameterType="int" resultType="com.javaex.vo.GuestbookVo">
		<![CDATA[
			select  no,
			        name,
			        password,
			        content,
			        reg_date regDate
			from guestbook
			where no = #{no}
		]]>
	</select>
	
	<!-- //ajax 방명록 등록때 사용 -->
	<insert id="insertSelectKey" parameterType="com.javaex.vo.GuestbookVo">
		<selectKey keyProperty="no" resultType="int" order="BEFORE">
			select seq_guestbook_no.nextval from dual
		</selectKey>
		<![CDATA[
			insert into guestbook
			values (#{no},
					#{name},
					#{password},
					#{content},
					sysdate)
		]]>
	</insert>
 
    <!-- no로 글1개 가져오기 -->
   <select id="selectGuest" parameterType="int" resultType="com.javaex.vo.GuestbookVo">
      <![CDATA[   
         select  no,
                 name,
                 password,
                 content,
                 reg_date as regDate
         from guestbook
         where no = #{no}
      ]]>
   </select>
</mapper>